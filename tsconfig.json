// tsconfig.json

// Deze configuratie gebruikt géén TypeScript "project references".
// We vertrouwen op de door Nuxt gegenereerde .nuxt/tsconfig.app.json,
// en breiden deze enkel uit met extra include/exclude-richtlijnen voor tooling en IDE.

{
  "extends": "./.nuxt/tsconfig.app.json",
  "include": [
    "app/**/*",
    "models/**/*",
    "i18n/**/*",
    "server/**/*",
    ".nuxt/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
